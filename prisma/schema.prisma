generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Patient {
  id             Int             @id @default(autoincrement())
  role           Role
  name           String
  email          String          @unique
  password       String
  medicalHistory Medicalreport[]
  primaryDoctor  Doctor?         @relation(fields: [doctorId], references: [id])
  doctorId       Int?
  appointment    Appoitment[]
}

model Medicalreport {
  id           Int     @id @default(autoincrement())
  symptoms     String
  tests        String
  results      String
  prescription String
  patient      Patient @relation(fields: [patientId], references: [id])
  patientId    Int
  priscribedBy Doctor  @relation(fields: [doctorId], references: [id])
  doctorId     Int
}

model Doctor {
  id             Int             @id @default(autoincrement())
  name           String
  email          String          @unique
  password       String
  role           Role
  qualifications String?
  patients       Patient[]
  appointments   Appoitment[]
  Medicalreport  Medicalreport[]
  Specialty      Specialty?      @relation(fields: [specialtyId], references: [id])
  specialtyId    Int?
}

model Appoitment {
  id              Int     @id @default(autoincrement())
  time            String
  verified        Boolean @default(false)
  doctorId        Int
  patientId       Int
  appointmentWith Doctor  @relation(fields: [doctorId], references: [id])
  requestedBy     Patient @relation(fields: [patientId], references: [id])
}

model Admin {
  id       Int    @default(autoincrement())
  email    String @unique
  password String
  name     String
}

model Specialty {
  id      Int      @id @default(autoincrement())
  title   String   @unique
  doctors Doctor[]
}

enum Role {
  DOCTOR
  PATIENT
}
